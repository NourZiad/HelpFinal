@model HelpFinal.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
	Layout = null;
}




<!-- Bootstrap core CSS -->
<link href="~/assets/css/bootstrap.css" rel="stylesheet">
<!--external css-->
<link href="~/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

<!-- Custom styles for this template -->
<link href="~/assets/css/style.css" rel="stylesheet">
<link href="~/assets/css/style-responsive.css" rel="stylesheet">





<div id="login-page">
	<div class="container">

		<form class="form-login" asp-action="Register">
			<h2 class="form-login-heading">sign up now</h2>
			<div class="login-wrap">
				<input asp-for="Name" class="form-control" placeholder="User ID" autofocus>
				<br>
				<input asp-for="Email" class="form-control" placeholder="Email">
				<br>
				<input asp-for="Phone" class="form-control" placeholder="Phone">
				<br>
				<input asp-for="Password" class="form-control" placeholder="Password">
				<br>
				<input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
				<br />
		
				<button class="btn btn-theme btn-block" asp-action="Index" asp-controller="Dashboard" , {area="Administrator" }" type="submit"><i class="fa fa-lock"></i> SIGN IN</button>
				<hr>

				<div class="registration">
					 Have an account ?<br />
					<a class="" asp-action="Login" asp-controller="Account">
						Login
					</a>
				</div>

			</div>
