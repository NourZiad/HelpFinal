@{
    ViewData["Title"] = "Contact Form Submitted";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a shared layout
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#successModal').modal('show'); // Show the modal on page load
        });
    </script>
}

<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Contact Form Submitted Successfully</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Thank you for your message. We will get back to you soon.</p>
            </div>
        </div>
    </div>
</div>


