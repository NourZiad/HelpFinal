@model IEnumerable<HelpFinal.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventImg)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDesc)
            </td>
            <td>
                <img width="150px" src="@Url.Content(item.EventImg)">
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-success">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-default">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-danger">Delete</a>
                    <a asp-action="SoftDelete" asp-route-id="@item.EventId" class="btn btn-warning">SoftDelete</a>
            </td>
        </tr>
}
    </tbody>
</table>
