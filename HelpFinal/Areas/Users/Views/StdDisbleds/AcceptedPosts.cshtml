@model List<HelpFinal.Models.StdDisbled>

@{
    ViewData["Title"] = "Accepted Requests";
}

<h2>Accepted Requests</h2>

@if (!Model.Any())
{
    <p>No requests have been accepted by volunteers.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Volunteer Name</th>
               
                <th>Needs</th>
                <th>Place</th>
                <th>Date</th>
                <th>Time</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.AcceptedBy</td>
                    
                    <td>@request.AssistanceNeeded</td>
                    <td>@request.Place</td>
                    <td>@request.Date.ToShortDateString()</td>
                    <td>@request.Time.ToShortTimeString()</td>
                    <!-- Add more cells for the desired information -->
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
